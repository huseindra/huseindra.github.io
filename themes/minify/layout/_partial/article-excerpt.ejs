

		<!-- begin post -->
		<div class="card">
			<a href="<%- config.root %><%- item.path %>">
				<img class="img-fluid" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
			</a>
			<div class="card-block">
				<h2 class="card-title"><a href="<%- config.root %><%- item.path %>"><%- item.title %></a></h2>
				<h4 class="card-text"><!-- Content --> <%- item.excerpt || item.content %></h4>
        <% if(item.excerpt) { %>
        <p>
            <a href="<%- config.root %><%- item.path %>">
                <%= theme.excerpt_link %>
            </a>
        </p>
        <% } %>
				<div class="metafooter">
					<div class="wrapfooter">
						<span class="meta-footer-thumb">
						<a href=""><img class="author-thumb" src="<%- config.root %><%- theme.logo_author %>" alt="Husein"></a>
						</span>
						<span class="author-meta">
						<span class="post-name"><a><% if(item.author) { %>
            by <%- item.author %>
        <% } %></a></span><br/>
						<span class="post-date"><%= item.date.format(config.date_format) %></span><span class="dot"></span><span class="post-read"><time class="timeago" datetime="<%= item.date.format(config.date_format) %>"><%= item.date.format(config.date_format) %></time></span>
						</span>
						<span class="post-read-more"><a href="post.html" title="Read Story"><svg class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z" fill-rule="evenodd"></path></svg></a></span>
					</div>
				</div>
			</div>
		</div>
		<!-- end post -->
